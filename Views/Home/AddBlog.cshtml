@model Blogs.Models.Blog

<div class="bg-primary m-1 p-1 text-white"><h4>Add Blog</h4></div>
<!-- form uses POST method, instead of submit property, uses asp-action-->
<form method="post" asp-action="AddBlog">
    <!-- asp-validation-summary="All" is used to display any validation errors-->
    <div asp-validation-summary="All"></div>
    <!-- instead of "for" porperty, use "asp-for" to map the element to the model-->
    <label asp-for="@Model.Name">Enter Url</label>
    <!-- instead of "for" porperty, use "asp-for" to map the element to the model-->
    <input asp-for="@Model.Name" placeholder="Blog Name" />
    <button type="submit">Create</button>
</form>

<hr />
<!-- instead of href, use asp-action to execute a method from the controller-->
<a asp-action="Index">Home</a>
